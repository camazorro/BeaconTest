<Alloy>
	<NavigationWindow>
		<Window class="container" title="Beacon Test">
			<LeftNavButton>
				<Button onClick="stopMonitor" id="btnMonitorStop">Stop</Button>				
			</LeftNavButton>
			<RightNavButton>
				<Button onClick="startMonitor" id="btnMonitorStart">Start</Button>	
			</RightNavButton>
			
			<ListView id="listView" defaultItemTemplate="default">
						
			    <Templates>
			        <ItemTemplate name="default">			            
			            <Label bindId="time" id="time" />
			            <Label bindId="event" id="event" />
			            <Label bindId="uuid" id="uuid" />
			        </ItemTemplate>
			        
			        <ItemTemplate name="enteredRegion">			            
			            <Label bindId="time" id="time" />
			            <Label bindId="event" id="event" />
			            <Label bindId="uuid" id="uuid" />
			        </ItemTemplate>			        
			
			        <ItemTemplate name="exitedRegion">			            
			            <Label bindId="time" id="time" />
			            <Label bindId="event" id="event" />
			            <Label bindId="uuid" id="uuid" />
			        </ItemTemplate>			
			    </Templates>
			
			    <ListSection headerTitle="Beacons Events">
			    </ListSection>
			</ListView>			
		</Window>
	</NavigationWindow>

</Alloy>